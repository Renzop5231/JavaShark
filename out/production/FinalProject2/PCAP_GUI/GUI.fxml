                <NumberAxis side="LEFT" label="# of Packets Sent"/>
              </yAxis>
            </BarChart>
         </children>
      </VBox>
      <VBox fx:id="timeGraphBox" layoutX="250.0" prefHeight="400.0" prefWidth="600.0">
         <children>
            <BarChart fx:id="timeGraph" prefHeight="400.0" prefWidth="600.0">
              <xAxis>
                <CategoryAxis side="BOTTOM" label="IP Addresses"/>
              </xAxis>
              <yAxis>
                <NumberAxis side="LEFT" label="Time Online in ms"/>
              </yAxis>
            </BarChart>
         </children>
      </VBox>
      <VBox fx:id="dataGraphBox" layoutX="250.0" prefHeight="410.0" prefWidth="600.0">
         <children>
            <BarChart fx:id="dataGraph">
              <xAxis>
                <CategoryAxis side="BOTTOM" label="IP Addresses"/>
              </xAxis>
              <yAxis>
                <NumberAxis side="LEFT" label="Avg Data Sent"/>
              </yAxis>
            </BarChart>
         </children>
      </VBox>
   </children>
