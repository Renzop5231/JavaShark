<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="PCAP_GUI.Controller">
   <children>
      <VBox prefHeight="400.0" prefWidth="250.0" style="-fx-border-color: #000; -fx-border-width: 5;">
         <children>
            <MenuBar prefWidth="250.0">
              <menus>
                <Menu fx:id="openItem" mnemonicParsing="false" onAction="#handleButtonAction" text="File">
